{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node", // switched from "bundler"
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Base directory for non-relative imports */
    "baseUrl": ".", // ensure "." is the root
    "rootDir": "src", // optional: if all code lives under src/

    /* Path Aliases */
    "paths": {
      "~/*": ["./src/*"],
      "*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "images.d.ts"
  ],
  "exclude": ["node_modules"]
}
